<div class="module-holder well col-md-6">
  <button class="close" data-dismiss="module-holder" type="button">
    <span class="glyphicon glyphicon-remove primary-color"  aria-hidden="true"></span>
   
  </button>
  <h4>Historique de match</h4>
    <%= form_for @dashboard, :url => url_for(:controller => 'match_history_modules', :action => 'create', :dashID => @dashboard.id), html: {method: "post", class: "form-horizontal"}  do |f| %>
    <div class="form-group">
      <label class="col-md-4 control-label">Compte :</label>
      <div class="col-md-8">
        
        <select name="account_id" class="form-control acc-list">
          <optgroup label="Mes comptes">
            <% @accounts.each do |a| %>
            <option value="<%= a.id %>"><%= a.pseudoLoL %> (<%= a.region %>)</option>
            <% end %>
          </optgroup>
          <% @trackgroups.each do |t| %>
          <optgroup label= "<%= t.name %>" >
            <% t.accounts.each do |a| %>
              <option value="<%= a.id %>"><%= a.pseudoLoL %> (<%= a.region %>)</option>
            <% end %>
          </optgroup>
          <% end %>
        </select>
       
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label">Nombre de matchs :</label>
      <div class="col-md-8">
        <select name="nb_match" class="form-control nb-list">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
    </div>

    <%= f.submit "Enregistrer", class: 'btn btn-default pull-right save-btn' %>
  <% end %>
</div>