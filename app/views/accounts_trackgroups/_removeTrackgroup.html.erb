<%= form_for @account, :url => url_for(:controller => 'accounts_trackgroups', :action => 'destroy'), html: {method: "delete"}  do |f| %>

<p>
  <%= f.label :trackgroups %>
  
  <%= f.collection_select(:trackgroups, @trackgroups, :id, :name) %>
</p>

<p>
  <%= f.hidden_field :id, :value => @account.id %>
  <%= f.submit "Remove from this trackgroup", class: 'btn btn-danger' %>
</p>

<% end %>